[user]
	name = Steve
	email = sel@users.noreply.github.com
[credential]
	helper = osxkeychain
[color]
	status = auto
	diff = auto
	branch = auto
[core]
	excludesfile = /Users/sel/.gitignore_global
	autocrlf = input
[push]
	default = simple
[grep]
	lineNumber = true
[alias]
	a = add
	c = commit
	ca = commit --amend
	can = commit --amend --no-edit
        co = checkout
	dc = diff --cached
	g = grep --break --heading --line-number
	lg = log -n 15 --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	lgn = log -n 15 --no-merges --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	prb = pull --rebase
	s = show
	st = status
